<div class="wrap-vertical medium">
    <div class="instructions">Input your data to login</div>
    <div class="error-message">{{errorMessage}}</div>

    <form action="/customer/login" method="post">
        <div class="registration-input"><input type="text" name="phone" id="phone-number" value={{phone}}>
            <label for="user-name">Phone number</label></div>
        <div class="registration-input"><input type="password" name="password" id="password" >
            <label for="user-name">Password</label></div>

            <!--<div class="button-wrap"><input class="forgot-password-button" type="button" name="forgot-password" id="forgot-password" value="Forgot password?"></div>-->

        <input type="hidden" name="role" value="customer">
        <div class="button-wrap" id="login-button"><input class="submit-button" type="submit" name="sign-up" value="Login"></div>
    </form>

    <form class="forgot-password-form" action="/customer/login/forgotpassword" method="get">
        <div class="button-wrap"><input class="forgot-password-button" type="submit" name="forgot-password" id="forgot-password" value="Forgot password?"></div>
    </form>
</div>

<div class="links-field">
    <form action="/customer/signup" method="get">
        <div class="login-link"> If you do not have an account, please
            <input class="link-button" type="submit" name="to-signup-page" value="SIGN UP">
        </div>
    </form>
</div>

<script>
    $('#phone-number').mask('+7(999)999-99-99');
</script>