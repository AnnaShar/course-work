<h1>Hello, customer!</h1>
<div class="wrap-vertical">
    <div class="instructions">Input your phone number</div>
    <div class="additional-instructions">You will get sms code to confirm your phone number</div>
    <div class="error-message">{{errorMessage}}</div>
    <form class="phone-form" action="/customer/signup" method="post">
        <input class="phone-number" type="text" name="phone" id="phone-number" >
        <input class="submit-button" type="submit" name="send-code" value="Send code">
    </form>
</div>

<div class="links-field">
    <form action="/customer/login" method="get">
        <div class="login-link"> If you already have an account, please
            <input class="link-button" type="submit" name="to-login-page" value="LOGIN">
        </div>
    </form>
</div>

<script>
    $(document).ready(function(){
        $('.wrap').addClass('scaled');
    });

    $('#phone-number').mask('+7(999)999-99-99');
</script>
